<html>
  <head>
    <style type="text/css">
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      textarea[id="content"] {
        position: absolute;
        top: 0px;
        bottom: 0px;
        left: 0px;
        right: 50%;
        display: block;
      }
      textarea[id="output"] {
        position: absolute;
        top: 0px;
        right: 0px;
        left: 50%;
        bottom: 0px;
      }
      textarea {
        display: block;
width: 50%;
      }
    </style>
  </head>
  <body>
    <textarea id="content"><: $content :></textarea>
    <textarea id="output"></textarea>
  </body>
  <script src="https://code.jquery.com/jquery-2.1.4.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      function update_json() {
        $.ajax({
          type: "POST",
          data: {content: $("#content").val()},
          dataType: "text",
          success: function(res) {
            $('#output').val(res);
          }
        });
      }
      $("#content").on("keyup change", function(e) {
        e.preventDefault();
        update_json();
      });
      update_json();
    });
  </script>
</html>
